<%= form_for(@drop) do |f| %>
  <% if @drop.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@drop.errors.count, "error") %> prohibited this drop from being saved:</h2>

      <ul>
      <% @drop.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :account %><br>
    <%= f.select(:account, @drop_accounts) %>
  </div>
  <div class="field">
    <%= f.label :scheduledrop %><br>
    <%= f.datetime_select :scheduledrop %>
  </div>
  <div class="field">
    <%= f.label :time_of_day %><br>
    <%= f.select :time_of_day, options_for_select(%w[early-morning mid-morning late-morning early-afternoon mid-afternoon late-afternoon]) %><br>
  </div>
  <div class="field">
    <%= f.label :contactname %><br>
    <%= f.text_field :contactname %><u>select</u>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
